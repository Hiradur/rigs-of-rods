abstract technique SpecularMapping
{
	pass
	{
		scene_blend_op subtract 
		texture_unit
		{
			texture_alias specular_tex
		}
	}
	pass
	{
		diffuse 0 0 0 0
		emissive 0 0 0 0
		specular 0.5 0.5 0.5 1 64
		scene_blend add 
		ambient 0 0 0 0
		texture_unit
		{
			texture_alias specular_tex
		}
	}
}

abstract technique WaterMapping
{
	pass WaterMap
	{
		scene_blend alpha_blend
		texture_unit Splat1
		{
			texture_alias watermap_tex
			// use alpha from this texture
			alpha_op_ex source1 src_texture src_texture
			// and colour from last pass
			colour_op_ex source2 src_texture src_texture
		}
		texture_unit
		{
			cubic_texture EnvironmentTexture combinedUVW
			color_op_ex blend_manual src_texture src_current 0.5
			tex_address_mode wrap
			scale 1 1
			env_map cubic_reflection
			tex_coord_set 1
			alpha blend colour with colour from last pass
			colour_op_ex blend_diffuse_alpha src_texture src_current
		}
	}
}

abstract technique AOMapping
{
		pass AOMap
		{
			scene_blend modulate
			texture_unit ao
			{
				texture_alias aomap_tex
			}
		}
}